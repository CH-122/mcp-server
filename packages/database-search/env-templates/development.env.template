# ===========================================
# 开发环境配置模板
# ===========================================
# 复制此文件为 .env.development 并填入真实的配置值

# 运行环境
NODE_ENV=development

# ===========================================
# 通用配置
# ===========================================

# OpenAI API 密钥（必需）
OPENAI_API_KEY=your_openai_api_key_here

# 默认数据库连接ID
DEFAULT_DATABASE=local-mysql

# 最大查询结果数
MAX_QUERY_RESULTS=50

# 是否启用缓存
ENABLE_CACHE=true

# 日志级别：debug, info, warn, error
LOG_LEVEL=debug

# ===========================================
# 开发环境数据库配置
# ===========================================

# 本地 MySQL 数据库
DB_LOCAL_MYSQL_HOST=localhost
DB_LOCAL_MYSQL_PORT=3306
DB_LOCAL_MYSQL_USERNAME=root
DB_LOCAL_MYSQL_PASSWORD=your_mysql_password
DB_LOCAL_MYSQL_DATABASE=learn-mysql

# 本地 SQLite 数据库（可选）
DB_LOCAL_SQLITE_DATABASE=./dev.db

# 本地 PostgreSQL 数据库（可选）
DB_LOCAL_POSTGRES_HOST=localhost
DB_LOCAL_POSTGRES_PORT=5432
DB_LOCAL_POSTGRES_USERNAME=dev_user
DB_LOCAL_POSTGRES_PASSWORD=dev_password
DB_LOCAL_POSTGRES_DATABASE=dev_db 