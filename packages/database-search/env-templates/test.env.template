# ===========================================
# 测试环境配置模板
# ===========================================
# 复制此文件为 .env.test 并填入真实的配置值

# 运行环境
NODE_ENV=test

# ===========================================
# 通用配置
# ===========================================

# OpenAI API 密钥（必需）
OPENAI_API_KEY=your_openai_api_key_here

# 默认数据库连接ID
DEFAULT_DATABASE=test-sqlite

# 最大查询结果数（测试环境限制较小）
MAX_QUERY_RESULTS=10

# 是否启用缓存（测试环境通常禁用缓存）
ENABLE_CACHE=false

# 日志级别：debug, info, warn, error
LOG_LEVEL=debug

# ===========================================
# 测试环境数据库配置
# ===========================================

# 测试 SQLite 数据库
DB_TEST_SQLITE_DATABASE=./test.db

# 测试 MySQL 数据库
DB_TEST_MYSQL_HOST=localhost
DB_TEST_MYSQL_PORT=3306
DB_TEST_MYSQL_USERNAME=test_user
DB_TEST_MYSQL_PASSWORD=test_password
DB_TEST_MYSQL_DATABASE=test_db

# 测试 PostgreSQL 数据库（可选）
DB_TEST_POSTGRES_HOST=localhost
DB_TEST_POSTGRES_PORT=5432
DB_TEST_POSTGRES_USERNAME=test_user
DB_TEST_POSTGRES_PASSWORD=test_password
DB_TEST_POSTGRES_DATABASE=test_db 